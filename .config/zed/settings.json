// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "auto_signature_help": true,
  "base_keymap": "VSCode",
  "buffer_font_family": "Geist Mono",
  "buffer_font_size": 12,
  "buffer_line_height": "comfortable",
  "completions": {
    "lsp": true,
    "lsp_fetch_timeout_ms": 1000
  },
  "cursor_blink": true,
  "cursor_shape": "bar",
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "min_column": 80,
      "update_debounce_ms": 150
    }
  },
  "file_types": {
    "JSONC": [
      "**/.zed/**/*.json",
      "**/zed/**/*.json",
      "**/Zed/**/*.json",
      "**/.vscode/**/*.json"
    ],
    "Shell Script": [".env.*"],
    "TOML": ["**/*.toml", "**/staticcheck.conf"],
    "dockerbake": ["docker-bake.hcl"],
    "json": ["*.sarif", "*.json"],
    "jsonc": ["*.json5"],
    "markdown": ["*.slide"],
    "pip-requirements": ["requirements*.in", "requirements*.txt"],
    "ruby": [".Brewfile", "Brewfile"],
    "terraform-vars": ["*.tfbackend", "*.tfvars"],
    "xml": ["*.plist", "*.xml"]
  },
  "git": {
    "inline_blame": {
      "delay_ms": 1000,
      "enabled": true
    }
  },
  "icon_theme": {
    "dark": "Catppuccin Macchiato",
    "light": "Catppuccin Latte",
    "mode": "dark"
  },
  "inlay_hints": {
    "enabled": false
  },
  "languages": {
    "Python": {
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "language_servers": ["pyright", "ruff"]
    }
  },
  "linked_edits": true,
  "lsp": {
    "gopls": {
      "initialization_options": {
        "formatting.gofumpt": true,
        "ui.diagnostic.analyses": {
          "shadow": true
        },
        "ui.diagnostic.staticcheck": true,
        "ui.diagnostic.vulncheck": "Imports",
        "ui.documentation.hoverKind": "FullDocumentation",
        "ui.navigation.symbolScope": "workspace",
        "ui.semanticTokens": true
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "typeCheckingMode": "strict"
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          "allTargets": true
        },
        "check": {
          "allTargets": true,
          "command": "clippy",
          "extraArgs": ["--all-features"]
        }
      }
    },
    "typos": {
      "initialization_options": {
        "diagnosticSeverity": "Warning"
      }
    }
  },
  "outline_panel": {
    "dock": "right"
  },
  "preview_tabs": {
    "enabled": false
  },
  "project_panel": {
    "auto_fold_dirs": false,
    "entry_spacing": "standard",
    "hide_gitignore": false
  },
  "show_edit_predictions": true,
  "show_signature_help_after_edits": true,
  "soft_wrap": "editor_width",
  "tabs": {
    "file_icons": true
  },
  "terminal": {
    "blinking": "on",
    "cursor_shape": "bar",
    "default_height": 400,
    "detect_venv": {
      "on": {
        "activate_script": "default",
        "directories": [".venv", "venv"]
      }
    },
    "font_family": "GeistMono Nerd Font Mono",
    "font_size": 12,
    "line_height": "standard",
    "shell": {
      "program": "/opt/homebrew/bin/nu"
    },
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "theme": {
    "dark": "Catppuccin Macchiato - No Italics",
    "light": "Catppuccin Latte",
    "mode": "dark"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false,
    "agent_review": false,
    "code_actions": false
  },
  "ui_font_size": 16
}
