// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "auto_install_extensions": {
    "bash": true,
    "catppuccin": true,
    "catppuccin-icons": true,
    "comment": true,
    "dockerfile": true,
    "git-firefly": true,
    "github-actions": true,
    "golangci-lint": true,
    "html": true,
    "make": true,
    "nu": true,
    "terraform": true,
    "toml": true,
    "txtar": true,
    "zig": true
  },
  "auto_signature_help": true,
  "autosave": "on_focus_change",
  "base_keymap": "VSCode",
  "buffer_font_family": "GeistMono Nerd Font Mono",
  "buffer_font_size": 12,
  "buffer_line_height": "comfortable",
  "colorize_brackets": false,
  "completions": {
    "lsp": true,
    "lsp_fetch_timeout_ms": 1000
  },
  "current_line_highlight": "none",
  "cursor_blink": true,
  "cursor_shape": "bar",
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "min_column": 80,
      "update_debounce_ms": 150
    }
  },
  "disable_ai": true,
  "experimental.theme_overrides": {
    "syntax": {
      "string": {
        "color": "#a1e7f2ef"
      }
    }
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/__pycache__",
    "**/.mypy_cache",
    "**/.ruff_cache",
    "**/.pytest_cache",
    "**/.rumdl-cache",
    "**/.venv",
    "**/venv",
    "**/.task"
  ],
  "file_types": {
    "dockerbake": ["docker-bake.hcl"],
    "Git Attributes": ["{git,.git,.git/info}/attributes"],
    "Git Config": [
      "{git,.git/modules,.git/modules/*}/config",
      "**/.config/git/config"
    ],
    "Git Ignore": [
      "{git,.git}/ignore",
      ".git/info/exclude",
      "**/.config/git/ignore"
    ],
    "GitHub Actions": [".github/workflows/*.yml", ".github/workflows/*.yaml"],
    "json": ["*.sarif", "*.json"],
    "JSONC": [
      "**/.zed/**/*.json",
      "**/zed/**/*.json",
      "**/Zed/**/*.json",
      "**/.vscode/**/*.json",
      "**/.devcontainer/devcontainer.json",
      "*.json5"
    ],
    "markdown": ["*.slide"],
    "pip-requirements": ["requirements*.in", "requirements*.txt"],
    "ruby": [".Brewfile", "Brewfile"],
    "Shell Script": [".env.*"],
    "terraform-tests": ["*.tftest.hcl"],
    "terraform-vars": ["*.tfbackend", "*.tfvars"],
    "TOML": ["*.toml", "**/staticcheck.conf"],
    "XML": ["*.plist", "*.xml"],
    "YAML": ["*.yaml", "*.yml", "*.snap"]
  },
  "git": {
    "blame": {
      "show_avatar": true
    },
    "inline_blame": {
      "delay_ms": 1000,
      "enabled": true
    }
  },
  "icon_theme": {
    "dark": "Catppuccin Macchiato",
    "light": "Catppuccin Latte",
    "mode": "dark"
  },
  "inlay_hints": {
    "enabled": true
  },
  "languages": {
    "Go": {
      "language_servers": ["gopls", "golangci-lint"]
    },
    "Python": {
      "formatter": [
        {
          "code_action": "source.fixAll.ruff"
        },
        {
          "code_action": "source.organizeImports.ruff"
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "language_servers": ["ruff", "ty", "!pyright"]
    },
    "YAML": {
      "formatter": "language_server"
    }
  },
  "linked_edits": true,
  "lsp": {
    "golangci-lint": {
      "binary": {
        "path": "~/go/bin/golangci-lint-langserver"
      },
      "initialization_options": {
        "command": [
          "golangci-lint",
          "run",
          "--output.json.path=stdout",
          "--show-stats=false"
        ]
      }
    },
    "gopls": {
      "initialization_options": {
        "formatting.gofumpt": true,
        "hints": {
          // I don't like inlay hints in Go
          "assignVariableTypes": false,
          "compositeLiteralFields": false,
          "compositeLiteralTypes": false,
          "constantValues": false,
          "functionTypeParameters": false,
          "parameterNames": false,
          "rangeVariableTypes": false
        },
        "ui.diagnostic.analyses": {
          "appendclipped": true,
          "shadow": true,
          "slicesdelete": true
        },
        "ui.diagnostic.staticcheck": true,
        "ui.diagnostic.vulncheck": "Imports",
        "ui.documentation.hoverKind": "FullDocumentation",
        "ui.navigation.symbolScope": "workspace",
        "ui.semanticTokens": false
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "typeCheckingMode": "strict"
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          "allTargets": true
        },
        "check": {
          "allTargets": true,
          "command": "clippy",
          "extraArgs": ["--all-features"]
        },
        "inlayHints": {
          "closingBraceHints": {
            "enable": false
          }
        }
      }
    }
  },
  "outline_panel": {
    "dock": "right"
  },
  "preview_tabs": {
    "enabled": true
  },
  "project_panel": {
    "auto_fold_dirs": false,
    "entry_spacing": "standard",
    "sticky_scroll": false
  },
  "show_signature_help_after_edits": true,
  "soft_wrap": "editor_width",
  "tabs": {
    "file_icons": true
  },
  "terminal": {
    "blinking": "on",
    "cursor_shape": "bar",
    "default_height": 400,
    "detect_venv": {
      "on": {
        "activate_script": "nushell",
        "directories": [".venv", "venv"]
      }
    },
    "font_family": "GeistMono Nerd Font Mono",
    "font_size": 12,
    "line_height": "standard",
    "shell": {
      "program": "/opt/homebrew/bin/nu"
    },
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "theme": {
    "dark": "Catppuccin Macchiato - No Italics",
    "light": "Catppuccin Latte - No Italics",
    "mode": "dark"
  },
  "title_bar": {
    "show_branch_icon": true
  },
  "toolbar": {
    "agent_review": false,
    "breadcrumbs": true,
    "code_actions": true,
    "quick_actions": false,
    "selections_menu": true
  },
  "ui_font_size": 16,
  "use_smartcase_search": true
}
